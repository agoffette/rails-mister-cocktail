<div class="banner">
  <p><i class="fas fa-glass-martini"></i>Shakr</p>
  <h1>The ultimate cocktail <span id="banner-typed-text"></span></h1>
  <h3>Find your own treat, delight your friends.</h3>
</div>

<div class="container">
  <h1>Our <%= @cocktails.length %> cocktails recipes:</h1>
    <div class="row">
      <% @cocktails.each do |cocktail| %>
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
          <div class="card" data-aos="flip-up" data-aos-duration="1000">
            <p><i class="fas fa-glass-martini"></i>&ensp;<%= link_to cocktail.name, show_path(cocktail) %></p>
          </div>
        </div>
      <% end  %>
    </div>
</div>
